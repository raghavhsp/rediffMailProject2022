<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Element Varification Suite"  parallel="tests" thread-count="2">
<!-- ####################################################################################################################### -->
			<test name="Validate elements of Rediffmail login page in Chrome Browser">
				<parameter name="browser" value="chrome" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfLoginPage" />
				</classes>
			</test>
			<test name="Validate elements of Rediffmail login page in Edge Browser">
				<parameter name="browser" value="edge" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfLoginPage" />
				</classes>
			</test>
			<test name="Validate elements of Rediffmail login page in Firefox Browser">
				<parameter name="browser" value="firefox" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfLoginPage" />
				</classes>
			</test>
<!-- ####################################################################################################################### -->
			<test name="Validate elements of Rediffmail User Home page in Chrome Browser">
				<parameter name="browser" value="CHROME" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfUserHomePage" />
				</classes>
			</test>
			<test name="Validate elements of Rediffmail User Home page in EDGE Browser">
				<parameter name="browser" value="EDGE" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfUserHomePage" />
				</classes>
			</test>
			<test name="Validate elements of Rediffmail User Home page in FireFox Browser">
				<parameter name="browser" value="FireFox" />
				<classes>
					<class name="common.RediffMail.Test.VerifyObjectsOfUserHomePage" />
				</classes>
			</test>
<!-- ####################################################################################################################### -->

</suite>
